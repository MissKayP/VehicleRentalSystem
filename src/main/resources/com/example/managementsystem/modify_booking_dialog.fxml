<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" style="-fx-padding: 20;" vgap="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.managementsystem.ModifyBookingController">

    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Modify Booking" GridPane.columnSpan="2" GridPane.halignment="CENTER" />

    <Label text="Customer:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Label fx:id="customerLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Vehicle:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Label fx:id="vehicleLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Current Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Label fx:id="currentStartDateLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Current End Date:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Label fx:id="currentEndDateLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="New End Date:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <DatePicker fx:id="newEndDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Additional Charges:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="additionalChargesField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="7">
        <Button onAction="#handleCancel" text="Cancel" />
        <Button onAction="#handleSave" style="-fx-background-color: #ffb400; -fx-text-fill: white;" text="Save Changes" />
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
